<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:clickable="true"
    tools:layout_width="match_parent"
    style="@style/HomeCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/fix_item_main_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#3F51B5"
            android:id="@+id/fix_item_bg_layout">

            <TextView
                android:id="@+id/fix_item_main_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:textSize="20sp"
                android:text="@string/loading"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:layout_gravity="top|center_vertical"
                android:src="@drawable/ic_info_black_24dp"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/fix_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.1"
                android:layout_margin="10dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:textSize="@dimen/card_font_medium"
                tools:text="body"
                android:text="ing"
                android:singleLine="true"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:id="@+id/fix_item_button_hide">

            <Button
                android:id="@+id/fix_item_button_start"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0px"
                android:textColor="?attr/colorAccent"
                android:text="@string/start">
            </Button>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
